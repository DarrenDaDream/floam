<?xml version="1.0"?>
<launch>

    <!-- Define arguments for flexibility -->
    <arg name="bag_file" default="/media/darren/mySamsungSSD/MCDVIRAL/ntu_day_01/*.bag"/>
    <arg name="point_cloud_topic" default="/os_cloud_node/points"/>
    <arg name="rviz" default="true"/>

    <!-- Play the bag file -->
    <node pkg="rosbag" type="play" name="rosbag_play" args="--clock $(arg bag_file)"/>

    <!-- Sim Time -->
    <param name="/use_sim_time" value="true"/>
    <param name="scan_period" value="0.1"/> 
    <param name="vertical_angle" type="double" value="2.0"/>
    <param name="max_dis" type="double" value="90.0"/>
    <param name="min_dis" type="double" value="3.0"/>

    <!-- Custom Ouster to Velodyne Conversion Node -->
    <node pkg="your_package" type="ouster_to_velodyne" name="ouster_to_velodyne" output="screen">
        <remap from="/os_cloud_node/points" to="$(arg point_cloud_topic)"/>
        <remap from="/velodyne_points" to="/converted_velodyne_points"/>
    </node>

    <!-- Floam Nodes -->
    <node pkg="floam" type="floam_odom_estimation_node" name="floam_odom_estimation_node" output="screen">
        <remap from="/velodyne_points" to="/converted_velodyne_points"/>
    </node>
    <node pkg="floam" type="floam_laser_processing_node" name="floam_laser_processing_node" output="screen">
        <remap from="/velodyne_points" to="/converted_velodyne_points"/>
    </node>

    <!-- Static Transforms -->
    <node pkg="tf" type="static_transform_publisher" name="world_to_map" args="0 0 0 0 0 0 /world /map 10"/>
    <node pkg="tf" type="static_transform_publisher" name="map_to_base_link" args="0 0 0 0 0 0 /map /base_link 10"/>
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_sensor" args="0 0 0 0 0 0 /base_link /os_sensor 10"/>

    <!-- RViz Visualization -->
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find floam)/rviz/floam.rviz"/>
    </group>

    <!-- Trajectory Servers -->
    <node pkg="hector_trajectory_server" type="hector_trajectory_server" name="trajectory_server_gt" ns="gt">
        <param name="target_frame_name" value="world"/>
        <param name="source_frame_name" value="os_sensor"/>
        <param name="trajectory_update_rate" value="10.0"/>
        <param name="trajectory_publish_rate" value="10.0"/>
    </node>
    <node pkg="hector_trajectory_server" type="hector_trajectory_server" name="trajectory_server_base_link" ns="base_link">
        <param name="target_frame_name" value="world"/>
        <param name="source_frame_name" value="base_link"/>
        <param name="trajectory_update_rate" value="10.0"/>
        <param name="trajectory_publish_rate" value="10.0"/>
    </node>

</launch>
